/*
 INPUT: ABCD AABBCC ABCDABCD
 OUTPUT:
       !@@$$$!!!!                                                                                                                    
       !@$$!!@@@$$$                                                                                                                  
       !@@$$$!!!!@$$!!!@@@@    */
#include<stdio.h       
#include<string.h>

int main()
{
    char x[100],ch='!';
    int l,i,a,j;
    scanf("%[^\n]s",x);
    l=strlen(x);
   
    for(i=0;i<l;i++)
    {
        if(x[i]!=32)
        {
            a=x[i]-64;
            for(j=0;j<a;j++)
            {
                printf("%c",ch);
            }
            if(ch=='!')
            {
                ch='@';
            }
            else if(ch=='@')
            {
                ch='$';
            }
            else
            {
                ch='!';
            }
            
        }
    
        else
        {
            printf("\n");
            ch='!';
        }
    }
    return 0;
}
